<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!--Content for the Edit Page-->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">

                <div class="form-group">
                <label for="courseTextField">Course Name</label>
                <input type="text" class="form-control"
                id="courseTextField"
                placeholder="Enter the Course Name"
                name="course" 
                value="<%= course.course %>"
                required>
                </div>

                <div class="form-group">
                <label for="coursenumTextField">Course Number</label>
                <input type="text" class="form-control"
                id="coursenumTextField"
                placeholder="Enter the Course Number"
                name="coursenum" 
                value="<%= course.coursenum %>"
                required>
                </div>

                <div class="form-group">
                <label for="professorTextField">Professor</label>
                <input type="text" class="form-control"
                id="professorTextField"
                placeholder="Enter the Professor's name"
                name="professor" 
                value="<%= course.professor %>"
                required>
                </div>


                <div class="form-group">
                <label for="prereqTextField">Prerequisite</label>
                <textarea type="text" class="form-control"
                id="prereqTextField"
                placeholder="Enter the prerequisite of the course"
                name="prerequisite" required>
                <%= course.prerequisite %>
                </textarea>
                </div>

                <div class="form-group">
                <label for="semesterTextField">Semester</label>
                <input type="text" class="form-control"
                id="semesterTextField"
                placeholder="Enter the semester of the course"
                name="semester" 
                value="<%= course.semester %>"
                required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">
                 <i class="fas fa-edit"></i>Submit</button>

                <a href="/course-list" class="btn btn-warning">
                 <i class="fas fa=undo"></i>Cancel</a>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>
